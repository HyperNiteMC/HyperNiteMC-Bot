{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "../dist",
    "rootDir": "../src",
    "composite": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "exclude": [
    "../node_modules",
    "../dist"
  ],
  "references": [
    {
      "path": "../src"
    }
  ]
}
